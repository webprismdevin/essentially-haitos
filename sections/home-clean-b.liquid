{% style %}
  .clean-b-home {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 32px;
  }
  .ingredient_card {
    position: relative;
  }
  .ingredient_title {
    position: absolute;
    top: 12px;
    left: 12px;
  }
  .placeholder-svg-ingredient {
    background-color: lightyellow;
    width: 100%;
    height: auto;
  }
{% endstyle %}
{% assign product = section.settings.product %}
<div style="max-width: 50%;">
  <p>{{ section.settings.caption }}</p>
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.rich_text }}</p>
  {% if section.settings.product != blank %}
    <div style="margin-bottom: 12px;">{% render 'price', product: product %}</div>
    {% render 'add-to-cart', product: product, show_quick_add: true %}
  {% endif %}
  <div>
    <h3>How it works</h3>
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'step' %}
          <div style="display: grid; grid-template-columns: 1fr 4fr;" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | img_url: '192x192' }}"
                alt="{{ block.settings.image.alt | escape }}"
                height="192"
                width="192"
                loading="lazy"
              >
            {% else %}
              <div style="max-width: 192px;">{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}</div>
            {% endif %}
            <div>
              <h4>{{ block.settings.title }}</h4>
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
  <div>
    <h3>What's inside?</h3>
    <div class="swiper {{ section.id }}__swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'ingredient' %}
              <div class="swiper-slide ingredient_card" {{ block.shopify_attributes }}>
                <span class="ingredient_title">{{ block.settings.title }}</span>
                {% if block.settings.image != blank %}
                  <img
                    src="{{ block.settings.image | image_url }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    height="320"
                    width="auto"
                    style="object-fit: cover"
                    loading="lazy"
                  >
                {% else %}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<div style="position: sticky; top: 100px;">
  <video
    data-poster="{{ section.settings.video.preview_image }}"
    controls
    style="max-height: 720px; border-radius: 10px;"
  >
    {% for source in section.settings.video.sources %}
      <source src="{{ source.url }}" type="{{ source.mime_type }}">
    {% endfor %}
  </video>
</div>
<script>
  var ingredients_swiper = new Swiper('.{{ section.id }}__swiper', {
    slidesPerView: 1,
    loop: true,
  });
</script>
{% schema %}
{
  "name": "[Home] Clean B",
  "tag": "section",
  "class": "clean-b-home page-width",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Caption",
      "default": "Caption"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "rich_text",
      "label": "Rich text"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "ingredient",
      "name": "Ingredient block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "[Home] Clean B Feature",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "title": "Title",
            "text": "Text"
          }
        }
      ]
    }
  ]

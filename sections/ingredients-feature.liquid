<style>
  .ingredients_feature {
    text-align: center;
  }
  .ingredients_feature--ingredient_wrap {
    {% comment %} max-width: 960px; {% endcomment %}
    {% comment %} margin: 0 auto; {% endcomment %}
    display: flex;
    flex-direction: row;
    grid-gap: 1rem;
    justify-content: space-between;
    align-items: flex-start;
  }
  .ingredient {
    flex-shrink: 1;
  }
  .image_box {
    width: 192px;
    height: 192px;
    margin: 0 auto;
    border-radius: 50%;
    overflow: hidden;
  }
</style>

{% if section.settings.caption != blank %}
  <p>{{ section.settings.caption }}</p>
{% endif %}

{% if section.settings.title != blank %}
  <h2>{{ section.settings.title }}</h2>
{% endif %}

{% if section.settings.description != blank %}
  <p>{{ section.settings.description }}</p>
{% endif %}

<div class="ingredients_feature--ingredient_wrap">
  {% for block in section.blocks %}
    <div class="ingredient" {{ block.shopify_attributes }}>
      {% if block.settings.image != blank %}
        <div class="image_box">
          <img
            src="{{ block.settings.image | image_url: width: 192 }}"
            {% comment %}
              height="{{ block.settings.image.height }}"
              width="{{ block.settings.image.width }}"
            {% endcomment %}
            loading="lazy"
            alt="{{ block.settings.title }}"
            style="max-width: 100;"
          >
        </div>
      {% else %}
        <style>
          .placeholder-svg {
            width: 100%;
            height: 100%;
          }
        </style>
        <div style="max-width: 192px;">{{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}</div>
      {% endif %}
      <h3>{{ block.settings.title }}</h3>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Ingredients Feature",
  "tag": "section",
  "class": "ingredients_feature page-width",
  "settings": [
    {
      "type": "text",
      "id": "caption",
      "label": "Caption",
      "default": "What's inside?"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Clean Ingredients For Clear Skin"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Ingredient Name",
          "label": "Ingredient Name"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredients Feature"
    }
  ]
}
{% endschema %}
